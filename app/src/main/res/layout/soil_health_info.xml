        </RelativeLayout>

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@android:drawable/ic_menu_send"
            android:visibility="visible" />
    </LinearLayout>

</ScrollView>
